<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#91af3b"
    android:nestedScrollingEnabled="false"
    android:scrollIndicators="none">
<!--
    Setting page the option title is placed high so the scrolling will not effect its position
-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:text="Options"
        android:textColor="#fefbfb"
        android:background="#050505"
        android:textSize="45sp"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="@drawable/background">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Zoom"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:textSize="20pt"
                        android:text="  1"
                        android:textColor="#faf9f9"
                        android:background="#6191a1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20pt"
                        android:text="10  "
                        android:id="@+id/textView2"
                        android:textColor="#faf9f9"
                        android:background="#6191a1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    android:paddingBottom="25dp"
                    android:paddingTop="10dp"
                    android:background="#fcfcfc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:background="#00ffffff"
                    android:text="Filter"
                    android:textColor="#fefdfd"
                    android:textSize="30dp"
                    android:textAlignment="center" />

            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="333dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZAP"
                        android:id="@+id/checkBox"
                        android:checked="true"
                        android:textSize="30dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:id="@+id/checkBox2"
                        android:layout_below="@+id/checkBox"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:checked="true"
                        android:textSize="30dp"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:id="@+id/switchToHome"
                        android:textColor="#ffffff"
                        android:background="#6191a1"
                        android:textSize="15pt"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="66dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apply"
                        android:id="@+id/apply"
                        android:textColor="#ffffff"
                        android:background="#6191a1"
                        android:textSize="15pt"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurants"
                        android:id="@+id/checkBox3"
                        android:checked="true"
                        android:textSize="30dp"
                        android:layout_below="@+id/checkBox2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
